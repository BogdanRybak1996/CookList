<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ua.cook.cooklist.activity.AddReceiptActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/add_receipt_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/addphoto2"
                />

            <EditText
                android:id="@+id/add_edittext_name"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_height="wrap_content"
                android:hint="Назва блюда"/>
            <EditText
                android:id="@+id/add_edittext_desc"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_height="wrap_content"
                android:hint="Опис блюда"/>

            <Button
                android:id="@+id/add_button_complete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center|bottom"
                android:text="Додати"/>

        </LinearLayout>

    </ScrollView>

</FrameLayout>
